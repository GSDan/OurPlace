@model IEnumerable<OurPlace.API.Models.LearningActivity>

@{
    ViewBag.Title = "Your Created Activities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@{
    bool rowStarted = false;
}

@for (int i = 0; i < Model.Count(); i++)
{
    if (rowStarted && i % 3 == 0)
    {
        rowStarted = false;
        @:</div>
    }

    if (i % 3 == 0)
    {
        rowStarted = true;
        @:<div class="row">
    }

    @Html.Partial("_CreatedActivityCardPartial", Model.ElementAt(i));

    if (i == Model.Count() - 1)
    {
        rowStarted = false;
        @:</div>
    }
}


